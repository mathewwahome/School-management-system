<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basaa.upload.FeesUpload">

    <ScrollView
        android:id="@+id/scrollView17"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Upload Fees as an image"
                android:textColor="#00ACC1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/firebaseimage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginVertical="30dp"
                android:padding="20dp"
                android:scaleType="centerCrop"

                />

            <TextView
                android:id="@+id/select_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:text="Select Image"
                android:background="@drawable/staffb"
                android:textColor="#FB8C00"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/upload_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:background="@drawable/parents"
                android:text="Upload Image"
                android:textColor="#C0CA33"
                android:textSize="25sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>