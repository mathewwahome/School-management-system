<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_bcakground"
    tools:context=".admin.results.AddResultsActivity">

    <ScrollView
        android:id="@+id/scrollView22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/result_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/add_student_results"
                android:textColor="#1E39DD"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/student_nam"
                android:textColor="#F4511E"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/in_student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/students_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textVie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/admission"
                android:textColor="#F4511E"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/in_adm_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/student_addmission"
                android:importantForAutofill="no"
                android:inputType="number" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_math"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/math"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_math"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_english"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_english"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_kiswahili"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kiswahili"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_kiswahili"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_chemistry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chemistry"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_chemistry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_cre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cre"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_cre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_physics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/physics"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_physics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_bs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/business"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_bs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_biology"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/biology"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_biology"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:importantForAutofill="no"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_computer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Computer"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_computer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_geo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Geography"
                        android:textColor="#039BE5"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/in_geo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btn_reults_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload" />

            <TextView
                android:id="@+id/textView141"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="This is where the Total marks, meangrade and mean marks will appear after uploading"
                android:textColor="#1E88E5"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView135"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="Total Marks"
                        android:textColor="#5E35B1"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/totalmarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView137"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="Mean Marks"
                        android:textColor="#5E35B1"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/meanmarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView139"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:text="Mean Grade"
                        android:textColor="#5E35B1"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/meangrd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:textSize="18sp" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>